---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { generateBreadcrumbs } from "../../util/generateBreadcrumbs";
import globalText from "../../data/globalText.json";
import contactText from "../../data/contactText.json";
import { Image } from "astro:assets";
import thanksImage from "../../assets/image/thanksCat.webp";
import Breadcrumbs from "../../components/Breadcrumbs.astro";

export const prerender = true;

const crumbs = generateBreadcrumbs(Astro.url.pathname);

const thanksPageImage = {
  alt: "お問い合わせありがとうございます。感謝の猫の画像",
  width: 200,
  height: 200,
};

const thanksLinks = {
  href: "/",
  ariaLabel: "トップページへ戻る",
  ariaTitle: "トップページへ戻る",
  label: "トップページ",
  span: "へ戻る",
};
---

<Layout
  title={globalText.thanks.title}
  description={globalText.thanks.description}
  ogType={globalText.local.type}
  ogTitle={globalText.thanks.title}
  ogDescription={globalText.thanks.description}
  twitterTitle={globalText.thanks.title}
  twitterDescription={globalText.thanks.description}
>
  <div id="outer-container">
    <Header />
    <main id="page-wrap">
      <div class="breadcrumbs__wrapper">
        <Breadcrumbs {crumbs} />
      </div>
      <div class="thanks__wrapper">
        <h1 class="thanks__header text-gradient">
          {contactText.thanks.title}
        </h1>
        <p class="thanks__body">
          {contactText.thanks.body.text1}
        </p>
        <p class="thanks__body">
          {contactText.thanks.body.text2}
        </p>
        <Image
          class="thanks__image"
          src={thanksImage}
          alt={thanksPageImage.alt}
          width={thanksPageImage.width}
          height={thanksPageImage.height}
          loading="lazy"
          decoding="async"
        />
        <p class="thanks__body_secondary">
          <a
            class="thanks__link"
            href={thanksLinks.href}
            aria-label={thanksLinks.ariaLabel}
            title={thanksLinks.ariaTitle}
          >
            {thanksLinks.label}
          </a>
          <span class="thanks__span">
            {thanksLinks.span}
          </span>
        </p>
      </div>
    </main>
    <Footer />
  </div>
</Layout>

<style>
  .thanks__wrapper {
    width: 100%;
    max-width: 700px;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    perspective: 100px;
  }
  @media (width <= 768px) {
    .thanks__wrapper {
      width: 90%;
    }
  }
  .thanks__header {
    font-size: 1.5rem;
    color: inherit;
    margin-block: 3rem;
  }
  .text-gradient {
    background-image: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-size: 150%;
    background-position: 0%;
    animation: flowingGradation 3s ease-in infinite;
  }
  @keyframes flowingGradation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  .thanks__body {
    font-size: 1rem;
    line-height: 2;
    letter-spacing: 0.16em;
    text-align: left;
    margin-block-start: 0.5rem;
  }
  .thanks__image {
    display: block;
    width: 200px;
    height: 200px;
    border-radius: 20%;
    object-fit: contain;
    margin-block-start: 1rem;
    margin-inline: auto;
    padding-block: 1rem;
    padding-inline: 1rem;
    animation: thanksCat 2s alternate infinite;
  }
  @keyframes thanksCat {
    0% {
      transform: translateY(0) translateZ(0);
    }
    100% {
      transform: translateY(-10px) translateZ(16px);
    }
  }
  .thanks__body_secondary {
    display: flex;
    justify-content: center;
    font-size: 1rem;
    line-height: 2;
    letter-spacing: 0.2em;
    margin-block-start: 1rem;
  }
  .thanks__link {
    display: block;
    color: rebeccapurple;
    text-align: center;
    text-decoration: underline;
  }
  .thanks__link:is(:hover, :focus-visible) {
    color: #ff4f48;
    text-decoration: none;
  }
</style>

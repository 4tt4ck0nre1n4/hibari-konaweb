---
import Search from "./Search.astro";
import Clock from "./Clock.astro";
import BackgroundImage from "./BackgroundImage.astro";
import ParticlesComponent from "./ParticlesComponent.tsx";
// import ParticlesButton from "./ParticlesButton.astro";
import ClockIcon from "./ClockIcon.astro";
import GridSwitch from "./GridSwitch.astro";
import ConfettiButton from "./ConfettiButton.astro";
---

<div class="clock-search__container">
  <div class="clock__wrapper">
    <Clock />
  </div>
  <div class="search__wrapper">
    <Search />
  </div>
</div>
<div class="particles-tools__container">
  <div class="particles__wrapper">
    <div class="particles__container">
      <ParticlesComponent client:only="react" />
    </div>
  </div>
  <div class="tools__wrapper">
    <BackgroundImage />
    <ClockIcon />
    <GridSwitch />
    <ConfettiButton />
  </div>
</div>

<style is:global>
  .clock-search__container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .clock__wrapper {
    background: transparent;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    border-radius: 1rem;
    padding-block: 1rem;
    padding-inline: 0.5rem;
    transition: box-shadow 0.4s ease;
  }
  .clock__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  html.dark .clock__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(255 255 255 / 0.6);
  }
  .search__wrapper {
    background: transparent;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    border-radius: 1rem;
    padding-block: 1rem;
    padding-inline: 0.5rem;
    transition: box-shadow 0.4s ease;
  }
  .search__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  html.dark .search__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(255 255 255 / 0.6);
  }
  /* スマホサイズでのレスポンシブ対応 */
  @media screen and (max-width: 768px) {
    .clock-search__container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    .clock__wrapper,
    .search__wrapper {
      width: 100%;
      margin-bottom: 0;
    }
    .particles__container {
      height: 200px;
    }
  }

  /* 480px以下での超小型スマホ最適化 */
  @media screen and (max-width: 480px) {
    .clock-search__container {
      grid-template-columns: 1fr 1fr;
      gap: 0.5rem;
    }

    .search__wrapper {
      padding-block: 1rem;
    }

    .particles__wrapper,
    .tools__wrapper {
      height: 150px;
    }

    .particles__container {
      height: 80px;
    }
  }
  .particles-tools__container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-block-start: 0.25rem;
  }
  .particles__wrapper {
    width: 100%;
    height: 60%;
    display: grid;
    align-items: center;
    background: transparent;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    border-radius: 1rem;
    position: relative;
    padding-block: 1rem;
    padding-inline: 0.5rem;
    transition: box-shadow 0.4s ease;
  }
  .particles__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  html.dark .particles__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(255 255 255 / 0.6);
  }
  .particles-container {
    width: 100%;
    position: relative;
  }
  .tools__wrapper {
    height: 60%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(48px, 1fr));
    gap: 1rem;
    background: transparent;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    border-radius: 1rem;
    position: relative;
    padding-block: 1rem;
    padding-inline: 0.5rem;
    transition: box-shadow 0.4s ease;
  }
  .tools__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  html.dark .tools__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(255 255 255 / 0.6);
  }
  @media screen and (max-width: 768px) {
    .particles-tools__container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }
    .tools__wrapper {
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 0.5rem;
    }
  }
  @media screen and (max-width: 480px) {
    .particles-tools__container {
      display: flex;
      flex-direction: row;
      gap: 0.5rem;
    }
    .particles__wrapper {
      flex: 1;
      height: 90px;
      padding-block: 0.5rem;
      padding-inline: 0.25rem;
    }
    .tools__wrapper {
      flex: 1;
      height: 90px;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 0.25rem;
      align-items: center;
      justify-items: center;
      padding-inline: 0.25rem;
    }
  }
</style>

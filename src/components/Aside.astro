---
import Search from "./Search.astro";
import Clock from "./Clock.astro";
import SoundToggle from "./SoundToggle";
import ParticlesComponent from "./ParticlesComponent.tsx";
import ClockIcon from "./ClockIcon.astro";
import GridSwitch from "./GridSwitch.astro";
import ConfettiButton from "./ConfettiButton.astro";
---

<div class="clock-search__container">
  <div class="clock__wrapper">
    <Clock />
  </div>
  <div class="search__wrapper">
    <Search />
  </div>
</div>
<div class="particles-tools__container">
  <div class="particles__wrapper">
    <div class="particles__container">
      <!-- パフォーマンス最適化: ローディング画面が消えた後に読み込む -->
      <ParticlesComponent client:idle />
    </div>
  </div>
  <div class="tools__wrapper">
    <SoundToggle client:idle />
    <ClockIcon />
    <GridSwitch />
    <ConfettiButton />
  </div>
</div>

<style is:global>
  .clock-search__container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .clock__wrapper {
    background: transparent;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    border-radius: 1rem;
    padding-block: 1rem;
    padding-inline: 0.5rem;
    transition: box-shadow 0.4s ease;
    width: 100%;
    box-sizing: border-box;
    min-width: 0; /* gridアイテムが適切に縮小できるように */
  }
  .clock__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  html.dark .clock__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(255 255 255 / 0.6);
  }
  .search__wrapper {
    background: transparent;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    border-radius: 1rem;
    padding-block: 1rem;
    padding-inline: 0.5rem;
    transition: box-shadow 0.4s ease;
    width: 100%;
    box-sizing: border-box;
    min-width: 0; /* gridアイテムが適切に縮小できるように */
  }
  .search__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  html.dark .search__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(255 255 255 / 0.6);
  }
  /* スマホサイズでのレスポンシブ対応 */
  @media (width <= 768px) {
    .clock-search__container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 0.5rem;
      align-items: stretch; /* 両方のアイテムを同じ高さに */
    }

    .clock__wrapper,
    .search__wrapper {
      width: 100%;
      margin-bottom: 0;
      min-width: 0; /* gridアイテムが適切に縮小できるように */
      padding-inline: 0.25rem; /* スマホサイズではpaddingを小さく */
    }
    .particles__container {
      height: 200px;
    }
    .particles-tools__container {
      gap: 0.5rem;
      margin-block-start: 0;
    }
  }

  /* 480px以下での超小型スマホ最適化 */
  @media (width <= 480px) {
    .clock-search__container {
      grid-template-columns: 1fr 1fr;
      gap: 0.25rem;
      margin-block-start: 3rem; /* スマホサイズでの余白調整 */
      align-items: stretch; /* 両方のアイテムを同じ高さに */
    }

    .clock__wrapper,
    .search__wrapper {
      padding-block: 0.5rem; /* スマホサイズではpaddingを小さく */
      padding-inline: 0.25rem; /* スマホサイズではpaddingを小さく */
      min-width: 0; /* gridアイテムが適切に縮小できるように */
    }

    .particles__wrapper,
    .tools__wrapper {
      height: 150px;
    }

    .particles__container {
      height: 80px;
    }
    .particles-tools__container {
      gap: 0.35rem;
    }
  }
  .particles-tools__container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-block-start: 0.25rem;
  }
  .particles__wrapper {
    width: 100%;
    height: 100%;
    display: grid;
    align-items: center;
    background: transparent;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    border-radius: 1rem;
    position: relative;
    padding-block: 1.5rem;
    padding-inline: 0.5rem;
    transition: box-shadow 0.4s ease;
  }
  .particles__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  html.dark .particles__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(255 255 255 / 0.6);
  }
  .particles-container {
    width: 100%;
    position: relative;
  }
  .tools__wrapper {
    height: 60%;
    height: 100%;
    min-height: 120px; /* CLS対策: 固定の最小高さを設定 */
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(48px, 1fr));
    gap: 1rem;
    background: transparent;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    border-radius: 1rem;
    position: relative;
    padding-block: 1.5rem;
    padding-inline: 0.5rem;
    transition: box-shadow 0.4s ease;
    aspect-ratio: auto; /* アスペクト比を明示 */
  }
  .tools__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  html.dark .tools__wrapper:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgba(255 255 255 / 0.6);
  }
  /* SoundToggleボタンのスタイル */
  #soundToggle {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--color-white);
    border: transparent 1px solid;
    border-radius: 1rem;
    box-shadow: 0 8px 16px rgba(0 0 0 / 0.6);
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 60px;
    transition:
      transform 0.1s ease,
      background 0.4s ease-in-out,
      box-shadow 0.4s ease;
  }
  #soundToggle:is(:hover, :focus-visible) {
    background: transparent;
    box-shadow: 0 16px 8px rgba(0 0 0 / 0.6);
  }
  #soundToggle:active {
    background: transparent;
    box-shadow: 0 4px 8px rgba(0 0 0 / 0.4);
    transform: scale(0.8);
  }
  #soundToggle svg {
    width: 40px !important;
    height: 40px !important;
    display: inline-flex;
    filter: drop-shadow(10px 20px 20px rgba(160 160 160 / 0.7));
    transition:
      opacity 1.8s ease,
      transform 0.35s ease;
  }
  #soundToggle svg:is(:hover, :focus-visible) {
    transform: scale(1.1);
  }
  @media (width <= 768px) {
    .particles-tools__container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }
    .tools__wrapper {
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 0.5rem;
    }
  }
  @media (width <= 480px) {
    .particles-tools__container {
      display: flex;
      flex-direction: row;
      gap: 0.5rem;
      margin-block-start: 1rem; /* スマホサイズでの余白調整 */
    }
    .particles__wrapper {
      flex: 1;
      height: 90px; /* tools__wrapperと同じheight */
      min-height: 90px; /* 通常スタイルのmin-heightを上書き */
      padding-block: 0.5rem;
      padding-inline: 0.25rem;
    }
    .tools__wrapper {
      flex: 1;
      height: 90px; /* particles__wrapperと同じheight */
      min-height: 90px; /* 通常スタイルのmin-height: 120pxを上書き */
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 0.25rem;
      align-items: center;
      justify-items: center;
      padding-block: 0.5rem; /* particles__wrapperと同じpadding */
      padding-inline: 0.25rem;
    }
  }
</style>

---
import SafeIcon from "./SafeIcon.astro";
import gridText from "../data/gridText.json";
import { play, pause, reverse, restart } from "../scripts/constButton";
---

<ul class="control__menu">
  <li class="control__menu_item">
    <button id="play" class="button" type="button" onclick="playAll()" aria-label={gridText.play} title={gridText.play}>
      <SafeIcon class="button__image" name={play.icon} />
    </button>
  </li>
  <li>
    <button
      id="pause"
      class="button"
      type="button"
      onclick="pauseAll()"
      aria-label={gridText.pause}
      title={gridText.pause}
    >
      <SafeIcon class="button__image" name={pause.icon} />
    </button>
  </li>
  <li>
    <button
      id="reverse"
      class="button"
      type="button"
      onclick="reverseAll()"
      aria-label={gridText.reverse}
      title={gridText.reverse}
    >
      <SafeIcon class="button__image" name={reverse.icon} />
    </button>
  </li>
  <li>
    <button
      id="restart"
      class="button"
      type="button"
      onclick="restartAll()"
      aria-label={gridText.restart}
      title={gridText.restart}
    >
      <SafeIcon class="button__image" name={restart.icon} />
    </button>
  </li>
</ul>

<style is:global>
  .control__menu {
    height: 100%;
    min-height: 112px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: transparent;
    list-style: none;
    box-shadow: 0 8px 16px rgb(0 0 0 / 0.6);
    border-radius: 1rem;
    position: relative;
    z-index: 1;
    overflow: hidden;
    margin-block-start: 1rem;
    padding-block: 1rem;
    padding-inline: 3rem;
    transition: all 0.3s ease-in;
  }
  .control__menu:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgb(0 0 0 / 0.6);
  }
  html.dark .control__menu:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgb(255 255 255 / 0.6);
  }
  .control__menu::before {
    content: "";
    width: 100%;
    max-width: 560px;
    height: 100%;
    max-height: 120px;
    display: block;
    background: var(--gradient-shinePurple);
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    transform: translateX(-200px) skew(-16deg);
    animation: shineController 6s linear infinite;
    animation-delay: 0.6s;
  }
  @keyframes shineController {
    0% {
      transform: translateX(-200px) skew(-16deg);
      opacity: 0;
    }
    16% {
      opacity: 1;
    }
    48% {
      transform: translateX(200px) skew(-16deg);
      opacity: 0.9;
    }
    56% {
      opacity: 0.3;
    }
    100% {
      transform: translateX(-200px) skew(-16deg);
      opacity: 0;
    }
  }

  .button {
    /* グラデーションの角度 */
    --gradient-angle: 135deg;
    /* 白の透明度（開始・中間・終了） */
    --gradient-white-opacity-start: 20%;
    --gradient-white-opacity-mid: 60%;
    --gradient-white-opacity-end: 30%;
    /* 白の位置（開始・中間・終了） */
    --gradient-white-pos-start: 0%;
    --gradient-white-pos-mid: 45%;
    --gradient-white-pos-end: 85%;
    /* 紫の位置（開始・中間・終了） */
    --gradient-purple-pos-start: 25%;
    --gradient-purple-pos-mid: 65%;
    --gradient-purple-pos-end: 100%;
    /* グラデーション定義: 白と紫が交互に配置される3段階のグラデーション */
    --gradient-controller: linear-gradient(
      var(--gradient-angle),
      color-mix(in srgb, var(--white) var(--gradient-white-opacity-start), transparent) var(--gradient-white-pos-start),
      var(--color-purple) var(--gradient-purple-pos-start),
      color-mix(in srgb, var(--white) var(--gradient-white-opacity-mid), transparent) var(--gradient-white-pos-mid),
      var(--color-purple) var(--gradient-purple-pos-mid),
      color-mix(in srgb, var(--white) var(--gradient-white-opacity-end), transparent) var(--gradient-white-pos-end),
      var(--color-purple) var(--gradient-purple-pos-end)
    );
    display: block;
    width: 60px;
    height: 60px;
    background: var(--gradient-controller);
    box-shadow: 0 18px 20px rgb(0 0 0 / 0.6);
    border: var(--color-white) 1px solid;
    border-radius: 0.675rem;
    overflow: hidden;
    aspect-ratio: 1 / 1;
    top: 1px;
    transform: rotate(0deg);
    transition:
      transform 0.1s ease,
      top 0.2s cubic-bezier(0.22, 1, 0.36, 1),
      border-radius 0.3s ease,
      box-shadow 0.6s ease;
    margin-inline: 1rem;
    padding: 0.5rem;
  }
  @media (width <= 480px) and (-webkit-min-device-pixel-ratio: 2) {
    .button {
      margin-inline: 0.25rem;
    }
  }
  .button.is-rotating {
    /* 回転時のグラデーションパラメータを上書き */
    --gradient-angle: 45deg;
    --gradient-white-opacity-start: 30%;
    --gradient-white-opacity-mid: 70%;
    --gradient-white-opacity-end: 50%;
    --gradient-white-pos-start: 0%;
    --gradient-purple-pos-start: 20%;
    --gradient-white-pos-mid: 40%;
    --gradient-purple-pos-mid: 60%;
    --gradient-white-pos-end: 80%;
    --gradient-purple-pos-end: 100%;
    /* グラデーションは親要素の定義を継承し、変数のみ上書き */
    background: var(--gradient-controller);
    top: -10px;
    border-radius: 50%;
    box-shadow:
      1px 2px 4px 0 var(--clay-box-shadow),
      2px 4px 8px 0 var(--clay-box-shadow),
      inset 2px 2px 8px var(--outset-shadow),
      inset -2px -2px 8px var(--inset-shadow);
    animation: rotateButton 2.5s linear infinite;
  }
  .button.reset-rotation {
    animation: none;
    transition: transform 0.6s ease;
    transform: rotate(0deg);
  }
  @keyframes rotateButton {
    to {
      transform: rotate(360deg);
    }
  }
  .button:active {
    transform: scale(0.8);
    box-shadow: 0 8px 8px rgb(0 0 0 / 0.4);
  }
  .button__image {
    width: 40px;
    height: 40px;
    object-fit: cover;
  }

  #play svg,
  #pause svg,
  #reverse svg,
  #restart svg {
    color: var(--white);
    fill: var(--white);
  }

  /* タブレット・スマホサイズでのレスポンシブ対応 */
  @media (width <= 768px) {
    .control__menu {
      flex-direction: row;
      justify-content: center;
      gap: 0.5rem;
    }
  }

  /* 480px以下での超小型スマホ最適化 */
  @media (width <= 480px) {
    .control__menu {
      flex-direction: row;
      gap: 0.25rem;
      padding-inline: 1rem;
    }
  }
</style>

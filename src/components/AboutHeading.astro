---
interface AboutProps {
  aboutTitle: string;
  aboutSubTitle: string;
}

const { aboutTitle, aboutSubTitle } = Astro.props as AboutProps;
---

<hgroup>
  <h2 class="about__title">
    {aboutTitle}
  </h2>
  <p class="about__subTitle">
    {aboutSubTitle}
  </p>
</hgroup>

<style is:global>
  .about__title {
    font-size: 2rem;
    color: inherit;
    text-align: center;
    padding-block-start: 1rem;
  }
  .about__subTitle {
    font-size: 1rem;
    line-height: 1.8;
    letter-spacing: 0.2em;
    color: inherit;
    text-align: center;
    margin-block-start: 1rem;
  }
  @media screen and (max-width: 480px) {
    .about__subTitle {
      letter-spacing: 0.04em;
    }
  }
</style>

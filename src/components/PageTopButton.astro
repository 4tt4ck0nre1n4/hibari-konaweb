---
import pageTopImage from "../assets/svg/pageTopImage.svg";
import pageTopIcon from "../assets/svg/top.svg";
---

<button id="pageTopButton" class="page-top-button" aria-label="„Éö„Éº„Ç∏„Éà„ÉÉ„Éó„Å∏Êàª„Çã">
  <img src={pageTopImage.src} alt="" class="page-top-button__image" />
  <div class="page-top-button__textInner">
    <img src={pageTopIcon.src} alt="" class="page-top-button__icon" />
    <span class="page-top-button__text">Page Top</span>
  </div>
</button>

<style>
  .page-top-button {
    min-width: 80px;
    min-height: 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    color: inherit;
    background: transparent;
    border: 2px solid currentColor;
    border-radius: 1rem;
    box-shadow: 0 8px 16px rgb(0 0 0 / 0.6);
    opacity: 0;
    visibility: hidden;
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    transform: translateY(1rem);
    transition:
      opacity 0.3s ease,
      visibility 0.3s ease,
      transform 0.3s ease,
      box-shadow 0.4s ease;
    z-index: 1000;
    padding-block: 0.5rem;
    padding-inline: 0.25rem;
  }

  .page-top-button.is-visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .page-top-button:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgb(0 0 0 / 0.6);
    transform: translateY(-0.25rem);
  }

  html.dark .page-top-button:is(:hover, :focus-visible) {
    box-shadow: 0 16px 8px rgb(255 255 255 / 0.6);
  }

  .page-top-button:active {
    transform: translateY(0);
    box-shadow: 0 4px 8px rgb(0 0 0 / 0.4);
  }

  .page-top-button__image {
    width: 60px;
    height: 90px;
    display: block;
    filter: drop-shadow(2px 4px 4px rgb(160 160 160 / 0.7));
    border-radius: 0.5rem;
    transition: transform 0.3s ease;
  }

  .page-top-button__textInner {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
  }

  .page-top-button__icon {
    width: 16px;
    height: 16px;
    display: block;
    background-color: var(--color-white);
    border-radius: 0.5rem;
    filter: drop-shadow(2px 4px 4px rgb(160 160 160 / 0.7));
    transition: transform 0.3s ease;
  }

  .page-top-button:is(:hover, :focus-visible) .page-top-button__icon {
    transform: scale(1.1);
  }

  .page-top-button__text {
    font-size: 0.75rem;
    font-weight: 600;
    text-align: center;
    white-space: nowrap;
  }

  /* „Çø„Éñ„É¨„ÉÉ„Éà„Éª„Çπ„Éû„Éõ„Çµ„Ç§„Ç∫„Åß„ÅÆ„É¨„Çπ„Éù„É≥„Ç∑„ÉñÂØæÂøú */
  @media (width <= 768px) {
    .page-top-button {
      bottom: 1.5rem;
      right: 1.5rem;
      padding: 0.75rem;
      min-width: 64px;
      min-height: 64px;
      gap: 0.25rem;
    }

    .page-top-button__icon {
      width: 14px;
      height: 14px;
    }
  }

  /* Ë∂ÖÂ∞èÂûã„Çπ„Éû„Éõ„Çµ„Ç§„Ç∫„Åß„ÅÆÊúÄÈÅ©Âåñ */
  @media (width <= 480px) {
    .page-top-button {
      bottom: 1rem;
      right: 1rem;
      padding: 0.5rem;
      min-width: 56px;
      min-height: 56px;
    }

    .page-top-button__icon {
      width: 12px;
      height: 12px;
    }
  }
</style>

<script>
  // ÈñãÁô∫Áí∞Â¢É„Åß„ÅÆ„Åø„É≠„Ç∞„ÇíÂá∫Âäõ„Åô„ÇãÈñ¢Êï∞
  const devLog = (...args: unknown[]) => {
    if (typeof window !== "undefined" && (window as { __DEV__?: boolean }).__DEV__) {
      console.log("[PageTopButton]", ...args);
    }
  };

  // „Ç∞„É≠„Éº„Éê„É´Â§âÊï∞„Åß„Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº„ÇíÁÆ°ÁêÜÔºàÈáçË§áÁôªÈå≤„ÇíÈò≤„ÅêÔºâ
  let scrollHandler: (() => void) | null = null;
  let clickHandler: (() => void) | null = null;
  let isInitialized = false;

  function cleanup() {
    devLog("üßπ Cleaning up event listeners");
    // Êó¢Â≠ò„ÅÆ„Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº„ÇíÂâäÈô§
    if (scrollHandler) {
      window.removeEventListener("scroll", scrollHandler);
      scrollHandler = null;
    }
    if (clickHandler) {
      const pageTopButton = document.getElementById("pageTopButton");
      if (pageTopButton && clickHandler) {
        pageTopButton.removeEventListener("click", clickHandler);
        clickHandler = null;
      }
    }
    isInitialized = false;
  }

  function initPageTopButton() {
    const pageTopButton = document.getElementById("pageTopButton") as HTMLElement | null;
    if (!pageTopButton) {
      devLog("‚ö†Ô∏è PageTopButton element not found");
      return;
    }

    devLog("‚úÖ Initializing PageTopButton");

    // Êó¢„Å´ÂàùÊúüÂåñ„Åï„Çå„Å¶„ÅÑ„ÇãÂ†¥Âêà„ÅØ„ÇØ„É™„Éº„É≥„Ç¢„ÉÉ„Éó
    if (isInitialized) {
      cleanup();
    }

    const firstView = document.querySelector(".fv") as HTMLElement | null;

    // FirstView„ÅÆbottom‰ΩçÁΩÆÔºà„Éö„Éº„Ç∏„Éà„ÉÉ„Éó„Åã„Çâ„ÅÆË∑ùÈõ¢Ôºâ„ÇíÂèñÂæó
    function getFirstViewBottom(): number {
      if (!firstView) {
        // FirstView„Åå„Å™„ÅÑÂ†¥Âêà„ÅØ„ÄÅ‰∏ÄÂÆö„ÅÆ„Çπ„ÇØ„É≠„Éº„É´‰ΩçÁΩÆÔºà300pxÔºâ„ÅßË°®Á§∫
        devLog("‚ÑπÔ∏è FirstView not found, using 300px threshold");
        return 300;
      }

      // offsetTop„Å®offsetHeight„Çí‰ΩøÁî®„Åó„Å¶„ÄÅ„Çà„ÇäÁ¢∫ÂÆü„Å´bottom‰ΩçÁΩÆ„ÇíÂèñÂæó
      const offsetTop = firstView.offsetTop;
      const offsetHeight = firstView.offsetHeight;
      const bottom = offsetTop + offsetHeight;

      devLog("üìè FirstView bottom position:", {
        offsetTop,
        offsetHeight,
        bottom,
        scrollY: window.scrollY || window.pageYOffset || document.documentElement.scrollTop,
      });

      return bottom;
    }

    // „Çπ„ÇØ„É≠„Éº„É´„Ç§„Éô„É≥„Éà„Éè„É≥„Éâ„É©„Éº
    function handleScroll() {
      if (!pageTopButton) return;

      const firstViewBottom = getFirstViewBottom();
      const scrollY = window.scrollY || window.pageYOffset || document.documentElement.scrollTop;

      devLog("üìú Scroll event:", {
        scrollY,
        firstViewBottom,
        shouldShow: scrollY > firstViewBottom,
      });

      // FirstView„ÇíÈÅé„Åé„Åü„Åã„Å©„ÅÜ„Åã„ÇíÂà§ÂÆöÔºàFirstView„Åå„Å™„ÅÑÂ†¥Âêà„ÅØ300px‰ª•‰∏ä„Çπ„ÇØ„É≠„Éº„É´„ÅßË°®Á§∫Ôºâ
      if (scrollY > firstViewBottom) {
        if (!pageTopButton.classList.contains("is-visible")) {
          devLog("üëÅÔ∏è Showing PageTopButton");
          pageTopButton.classList.add("is-visible");
        }
      } else {
        if (pageTopButton.classList.contains("is-visible")) {
          devLog("üôà Hiding PageTopButton");
          pageTopButton.classList.remove("is-visible");
        }
      }
    }

    // „Éà„ÉÉ„Éó„Å∏Êàª„ÇãÂá¶ÁêÜ
    function scrollToTop() {
      devLog("‚¨ÜÔ∏è Scrolling to top");
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    }

    // „Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº„ÅÆË®≠ÂÆö
    scrollHandler = handleScroll;
    clickHandler = scrollToTop;

    window.addEventListener("scroll", scrollHandler, { passive: true });
    pageTopButton.addEventListener("click", clickHandler);

    devLog("‚úÖ Event listeners attached");

    // ÂàùÊúüÁä∂ÊÖã„Çí„ÉÅ„Çß„ÉÉ„ÇØÔºàÂ∞ë„ÅóÈÅÖÂª∂„Åï„Åõ„Å¶DOM„ÅåÂÆåÂÖ®„Å´Ë™≠„ÅøËæº„Åæ„Çå„Çã„ÅÆ„ÇíÂæÖ„Å§Ôºâ
    setTimeout(() => {
      handleScroll();
    }, 100);

    // „É™„Çµ„Ç§„Ç∫ÊôÇ„Å´„ÇÇÂÜçË®àÁÆóÔºàFirstView„ÅÆÈ´ò„Åï„ÅåÂ§â„Çè„ÇãÂèØËÉΩÊÄß„Åå„ÅÇ„Çã„Åü„ÇÅÔºâ
    const resizeHandler = () => {
      devLog("üìê Window resized, recalculating");
      handleScroll();
    };
    window.addEventListener("resize", resizeHandler, { passive: true });

    isInitialized = true;
  }

  // ÂàùÊúüÂåñÈñ¢Êï∞
  function setupPageTopButton() {
    // DOM„ÅåÂÆåÂÖ®„Å´Ë™≠„ÅøËæº„Åæ„Çå„Çã„Åæ„ÅßÂæÖ„Å§
    const checkAndInit = () => {
      const pageTopButton = document.getElementById("pageTopButton");
      if (!pageTopButton) {
        devLog("‚è≥ PageTopButton not found yet, retrying...");
        setTimeout(checkAndInit, 100);
        return;
      }
      initPageTopButton();
    };

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", checkAndInit);
    } else {
      // Êó¢„Å´Ë™≠„ÅøËæº„Åæ„Çå„Å¶„ÅÑ„ÇãÂ†¥Âêà„Åß„ÇÇ„ÄÅÂ∞ë„ÅóÈÅÖÂª∂„Åï„Åõ„Å¶„Åã„ÇâÂàùÊúüÂåñ
      setTimeout(checkAndInit, 100);
    }
  }

  // View TransitionsÂØæÂøú: „Éö„Éº„Ç∏ÈÅ∑ÁßªÊôÇ„Å´ÂÜçÂàùÊúüÂåñ
  document.addEventListener("astro:after-swap", () => {
    devLog("üîÑ Page swapped, reinitializing");
    cleanup();
    // Â∞ë„ÅóÈÅÖÂª∂„Åï„Åõ„Å¶„Åã„ÇâÂÜçÂàùÊúüÂåñÔºàDOM„ÅåÂÆåÂÖ®„Å´Êõ¥Êñ∞„Åï„Çå„Çã„ÅÆ„ÇíÂæÖ„Å§Ôºâ
    setTimeout(() => {
      setupPageTopButton();
    }, 200);
  });

  // ÂàùÂõûÂàùÊúüÂåñ
  setupPageTopButton();
</script>

<script>
  // @ts-nocheck
  import { gsap } from "gsap";

  // カードのフリップアニメーションを初期化
  function initCardFlip() {
    const cards = document.querySelectorAll(".card__item");

    cards.forEach((card) => {
      const flipContainer = card.querySelector(".card__flip-container");
      const frontLink = card.querySelector(".card__front .card__item_link");
      const backButton = card.querySelector(".card__flip_back");

      // フリップ状態を管理するフラグ
      let isFlipping = false;
      let touchStartTime = 0;
      let touchStartY = 0;

      // 表面のクリック/タッチ処理（統一されたイベントハンドリング）
      const handleFrontInteraction = (e: Event) => {
        e.preventDefault();
        e.stopPropagation();

        // フリップ中は処理をスキップ
        if (isFlipping) return;

        flipCard(flipContainer as HTMLElement, true);
      };

      // 裏面の戻るボタン処理
      const handleBackClick = (e: Event) => {
        e.preventDefault();
        e.stopPropagation();

        // フリップ中は処理をスキップ
        if (isFlipping) return;

        flipCard(flipContainer as HTMLElement, false);
      };

      // タッチデバイス用の処理
      if ("ontouchstart" in window) {
        // タッチスタート
        frontLink?.addEventListener(
          "touchstart",
          (e) => {
            const touch = e.touches[0];
            touchStartTime = Date.now();
            touchStartY = touch.clientY;
          },
          { passive: true }
        );

        // タッチエンド
        frontLink?.addEventListener(
          "touchend",
          (e) => {
            const touchDuration = Date.now() - touchStartTime;
            const touch = e.changedTouches[0];
            const touchEndY = touch.clientY;
            const touchDistance = Math.abs(touchEndY - touchStartY);

            // 短いタップかつスクロールでない場合のみフリップ
            if (touchDuration < 300 && touchDistance < 10) {
              handleFrontInteraction(e);
            }
          },
          { passive: false }
        );
      } else {
        // 非タッチデバイス用のクリック処理
        frontLink?.addEventListener("click", handleFrontInteraction);
      }

      // 裏面のボタン処理（タッチ/クリック両対応）
      backButton?.addEventListener("click", handleBackClick);

      // フリップ状態の更新を監視
      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.type === "attributes" && mutation.attributeName === "class") {
            const target = mutation.target as HTMLElement;
            isFlipping = target.classList.contains("flipped");
          }
        });
      });

      if (flipContainer) {
        observer.observe(flipContainer, { attributes: true });
      }
    });
  }

  // カードをフリップする関数
  function flipCard(container: HTMLElement | null, toFlipped: boolean) {
    if (!container) return;

    // フリップ状態を即座に設定
    const isCurrentlyFlipped = container.classList.contains("flipped");

    // 既に目的の状態の場合は何もしない
    if ((toFlipped && isCurrentlyFlipped) || (!toFlipped && !isCurrentlyFlipped)) {
      return;
    }

    // パフォーマンス最適化のためのwill-change設定
    container.style.willChange = "transform";

    // デバイス検出
    const isMobile = window.innerWidth <= 768;
    const isIOS = /iphone|ipad|ipod/.test(navigator.userAgent.toLowerCase());
    const isSafari = /^((?!chrome|android).)*safari/i.test(navigator.userAgent);

    // モバイルデバイス用の最適化設定
    if (isMobile || isIOS || isSafari) {
      container.style.webkitBackfaceVisibility = "hidden";
      container.style.backfaceVisibility = "hidden";
      container.style.webkitTransformStyle = "preserve-3d";
      container.style.transformStyle = "preserve-3d";
    }

    // アニメーション設定
    const animationConfig = {
      duration: isMobile ? 0.25 : 0.4,
      ease: "power2.inOut",
      force3D: true,
      onStart: () => {
        // アニメーション開始時にクラスを即座に適用
        if (toFlipped) {
          container.classList.add("flipped");
        } else {
          container.classList.remove("flipped");
        }
      },
      onComplete: () => {
        container.style.willChange = "auto";
        // アニメーション完了後に状態を確認
        if (toFlipped) {
          container.classList.add("flipped");
        } else {
          container.classList.remove("flipped");
        }
      },
    };

    // フリップアニメーション実行
    if (toFlipped) {
      gsap.to(container, {
        ...animationConfig,
        rotationY: 180,
      });
    } else {
      gsap.to(container, {
        ...animationConfig,
        rotationY: 0,
      });
    }
  }

  // モダンな初期化方法
  function initializeCardFlip() {
    // カードが存在するかチェック
    const cards = document.querySelectorAll(".card__item");
    if (cards.length === 0) {
      return;
    }

    // 既に初期化済みの場合はスキップ
    const uninitializedCards = Array.from(cards).filter((card) => !card.hasAttribute("data-initialized"));

    if (uninitializedCards.length === 0) {
      return;
    }

    // 初期化を実行
    initCardFlip();

    // 初期化済みマークを追加
    cards.forEach((card) => {
      card.setAttribute("data-initialized", "true");
    });

    console.log(`Card flip initialized for ${cards.length} cards`);
  }

  // 初期化を実行する関数
  function runInitialization() {
    if (typeof window === "undefined") return;

    // 複数のタイミングで初期化を試行
    const initTimings = [0, 100, 300, 500];

    initTimings.forEach((delay) => {
      setTimeout(() => {
        initializeCardFlip();
      }, delay);
    });

    // リサイズイベントでも初期化を再実行
    let resizeTimeout: number;
    window.addEventListener("resize", () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        initializeCardFlip();
      }, 250);
    });
  }

  // DOMが読み込まれた後に初期化
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", runInitialization);
  } else {
    // 既に読み込み完了している場合
    runInitialization();
  }

  // Astroの場合は、コンポーネントがマウントされた後に初期化
  if (typeof window !== "undefined") {
    runInitialization();
  }
</script>

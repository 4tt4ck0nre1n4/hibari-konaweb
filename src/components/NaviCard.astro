interface MenuItem {
  href: string;
  ariaLabel: string;
  ariaTitle: string;
  menuItem: string;
}

const menuItems: MenuItem[] = [
  { href: "/", ariaLabel: "ホーム", ariaTitle: "ホーム", menuItem: "Home" },
  { href: "/about", ariaLabel: "アバウト", ariaTitle: "アバウト", menuItem: "About" },
  { href: "/works", ariaLabel: "ワークス", ariaTitle: "ワークス", menuItem: "Works" },
  { href: "/blog", ariaLabel: "ブログ", ariaTitle: "ブログ", menuItem: "Blog" },
  { href: "/contact", ariaLabel: "お問い合わせ", ariaTitle: "お問い合わせ", menuItem: "Contact" },
];
---

<div class="navi-card__wrapper">
  <button
    class="navi-card__button"
    type="button"
    aria-label="メニューを開く"
    aria-expanded="false"
    aria-controls="navi-card"
  >
    <span class="navi-card__button_text">Navigation Menu</span>
  </button>
  <ul id="navi-card" class="navi-card__menu" aria-hidden="true">
    {
      menuItems.map((item, index) => (
        <li class="navi-card__menu_item" data-index={index}>
          <a class="navi-card__menu_link" href={item.href} aria-label={item.ariaLabel} title={item.ariaTitle}>
            <span class="navi-card__menu_text">{item.menuItem}</span>
          </a>
        </li>
      ))
    }
  </ul>
</div>

<script>
  function initNaviCard() {
    console.log("=== NaviCard initialization started ===");
    const button = document.querySelector(".navi-card__button") as HTMLButtonElement;
    const menu = document.querySelector(".navi-card__menu") as HTMLUListElement;
    const menuItems = document.querySelectorAll(".navi-card__menu_item") as NodeListOf<HTMLLIElement>;
    const glitchContainer = document.querySelector(".glitch-container") as HTMLElement;

    console.log("Elements found:", {
      button: !!button,
      menu: !!menu,
      menuItemsCount: menuItems.length,
      glitchContainer: !!glitchContainer,
    });

    if (!button || !menu || !menuItems.length) {
      console.error("NaviCard: Required elements not found!");
      return;
    }

    console.log("NaviCard: All elements found, setting up listeners...");
    let isOpen = false;

    button.addEventListener("click", () => {
      isOpen = !isOpen;
      console.log(`Button clicked! isOpen: ${isOpen}`);

      // ARIA属性の更新
      button.setAttribute("aria-expanded", String(isOpen));
      button.setAttribute("aria-label", isOpen ? "メニューを閉じる" : "メニューを開く");
      menu.setAttribute("aria-hidden", String(!isOpen));

      // クラスの切り替え
      button.classList.toggle("is-open", isOpen);
      menu.classList.toggle("is-open", isOpen);
      console.log(`Menu classes:`, menu.classList.toString());

      // main要素内のglitch-container以外の要素のpointer-eventsを制御
      // ただし、カード要素とボタン要素は除外
      const main = document.querySelector("main") as HTMLElement;
      if (main && isOpen) {
        // main要素内の直接の子要素のみを制御（再帰的にはしない）
        const mainChildren = Array.from(main.children) as HTMLElement[];
        mainChildren.forEach((child) => {
          // glitch-containerは除外
          if (!child.classList.contains("glitch-container") && !child.querySelector(".glitch-container")) {
            child.style.pointerEvents = "none";
          }
        });
        console.log(`Main children pointer-events set to: none`);
      } else if (main && !isOpen) {
        // メニューが閉じている時は、すべての要素のpointer-eventsをリセット
        const mainChildren = Array.from(main.children) as HTMLElement[];
        mainChildren.forEach((child) => {
          child.style.pointerEvents = "";
        });
        console.log(`Main children pointer-events reset`);
      }

      // glitch-containerとその子要素のpointer-eventsとz-indexを制御
      // 画像は表示し続けるが、pointer-eventsをnoneにしてカードのクリックを可能にする
      if (glitchContainer) {
        // glitch-container自体のpointer-eventsを制御
        glitchContainer.style.pointerEvents = "none"; // 常にnone（元々none）

        // .glitch要素を取得
        const glitchElement = glitchContainer.querySelector(".glitch") as HTMLElement;
        if (glitchElement) {
          // .glitch要素のz-indexを0に設定（カードより後ろに配置）
          glitchElement.style.setProperty("z-index", "0", "important");
        }

        // glitch-containerの子要素のpointer-eventsとz-indexを制御
        // NaviCardとGlitchコンポーネントを区別
        const glitchChildren = glitchContainer.querySelectorAll("*") as NodeListOf<HTMLElement>;
        glitchChildren.forEach((child) => {
          // NaviCardコンポーネント（navi-card__wrapper）は除外
          const isNaviCard = child.classList.contains("navi-card__wrapper") || child.closest(".navi-card__wrapper");
          if (!isNaviCard) {
            // メニューが開いている時はpointer-eventsをnoneにする（画像は表示し続ける）
            child.style.pointerEvents = isOpen ? "none" : "auto";
            // z-indexを明示的に設定してカードより後ろに配置
            if (child.classList.contains("glitch") || child.closest(".glitch")) {
              child.style.setProperty("z-index", "0", "important");
            } else {
              child.style.setProperty("z-index", "0", "important");
            }
          }
        });
        console.log(`Glitch children pointer-events set to: ${isOpen ? "none" : "auto"}`);
      }

      // 各アイテムのアニメーション
      if (isOpen) {
        // 1枚ずつ時間差で表示
        menuItems.forEach((item, index) => {
          console.log(`Scheduling Card ${index} to add is-open in ${index * 400}ms`);
          setTimeout(() => {
            console.log(`Adding is-open to Card ${index}...`);
            item.classList.add("is-open");

            // CSSのtransitionを待たずに、JavaScriptで直接opacityを強制設定
            (item as HTMLElement).style.setProperty("opacity", "1", "important");

            console.log(`Card ${index} is-open added. Classes:`, item.classList.toString());

            // 少し待ってから状態を確認（transitionが適用されるまで）
            setTimeout(() => {
              const hasIsOpen = item.classList.contains("is-open");
              const computedStyle = window.getComputedStyle(item);
              const rect = item.getBoundingClientRect();
              console.log(`Card ${index} after add:`, {
                hasIsOpen,
                opacity: computedStyle.opacity,
                pointerEvents: computedStyle.pointerEvents,
                zIndex: computedStyle.zIndex,
                marginLeft: computedStyle.marginLeft,
                marginTop: computedStyle.marginTop,
                left: computedStyle.left,
                top: computedStyle.top,
                transform: computedStyle.transform,
                position: { x: Math.round(rect.x), y: Math.round(rect.y), width: rect.width, height: rect.height },
              });

              // カードの中央座標でelementFromPointをチェック
              const centerX = rect.x + rect.width / 2;
              const centerY = rect.y + rect.height / 2;
              const elementAtCenter = document.elementFromPoint(centerX, centerY);
              console.log(`Card ${index} center (${Math.round(centerX)}, ${Math.round(centerY)}):`, {
                topElement: elementAtCenter?.className || elementAtCenter?.tagName,
                isCard: elementAtCenter === item,
                isInsideCard: item.contains(elementAtCenter),
              });
            }, 100);
          }, index * 400);
        });
      } else {
        menuItems.forEach((item, index) => {
          item.classList.remove("is-open");
          item.style.transitionDelay = `${(menuItems.length - index - 1) * 0.08}s`;
        });
      }
    });

    // カード全体をクリック可能にする
    menuItems.forEach((item, index) => {
      const link = item.querySelector(".navi-card__menu_link") as HTMLAnchorElement;
      if (link) {
        console.log(`Setting up click listener for card ${index}, href: ${link.getAttribute("href")}`);

        // マウスオーバーテスト
        // カードの位置とスタイルをログ（全カード表示後）
        setTimeout(() => {
          const rect = item.getBoundingClientRect();
          const computedStyle = window.getComputedStyle(item);
          const hasIsOpen = item.classList.contains("is-open");
          console.log(`Card ${index} position:`, {
            hasIsOpen,
            x: Math.round(rect.x),
            y: Math.round(rect.y),
            width: rect.width,
            height: rect.height,
            transform: computedStyle.transform,
            pointerEvents: computedStyle.pointerEvents,
            zIndex: computedStyle.zIndex,
            opacity: computedStyle.opacity,
          });
        }, 2500); // 全カード表示完了後（5枚 × 400ms = 2000ms + 余裕）

        item.addEventListener("mouseenter", () => {
          console.log(`Card ${index} mouseenter`);
        });

        item.addEventListener("mouseover", () => {
          console.log(`Card ${index} mouseover`);
        });

        // カード全体（li要素）にクリックイベント（キャプチャフェーズで最優先）
        // 3D回転したカードの視覚的な領域全体をクリック可能にする
        item.addEventListener(
          "click",
          (e) => {
            console.log(`=== CARD ${index} CLICKED ===`);
            e.stopPropagation(); // 親要素への伝播を止める
            e.stopImmediatePropagation(); // 同じ要素の他のリスナーも停止
            e.preventDefault(); // デフォルト動作も停止
            const href = link.getAttribute("href");
            console.log("Card clicked! Navigating to:", href);
            if (href) {
              // ページ遷移を強制実行
              setTimeout(() => {
                window.location.href = href;
              }, 0);
            }
          },
          { capture: true }
        );

        // カードの視覚的な領域全体をクリック可能にするため、
        // カード要素全体にマウスイベントを設定（クリック可能領域を拡大）
        item.addEventListener(
          "mousedown",
          (e) => {
            // カード全体をクリック可能にする
            e.stopPropagation();
          },
          { capture: true }
        );

        // カード全体にマウスオーバーイベントを設定（カーソル変化を確実にする）
        item.addEventListener(
          "mouseenter",
          () => {
            item.style.cursor = "pointer";
            link.style.cursor = "pointer";
          },
          { capture: true }
        );

        // リンクにも直接イベント
        link.addEventListener(
          "click",
          (e) => {
            console.log(`=== LINK ${index} CLICKED ===`);
            e.stopPropagation();
            e.stopImmediatePropagation();
            e.preventDefault();
            const href = link.getAttribute("href");
            console.log("Link clicked! Navigating to:", href);
            if (href) {
              setTimeout(() => {
                window.location.href = href;
              }, 0);
            }
          },
          { capture: true }
        );
      } else {
        console.error(`Card ${index}: Link not found!`);
      }
    });

    console.log("NaviCard: All click listeners registered");

    // デバッグ: カードエリアのクリックを全てログ
    document.addEventListener(
      "click",
      (e) => {
        const target = e.target as HTMLElement;
        const clickX = (e as MouseEvent).clientX;
        const clickY = (e as MouseEvent).clientY;

        console.log("=== GLOBAL CLICK ===", {
          x: Math.round(clickX),
          y: Math.round(clickY),
          target: target.className || target.tagName,
          targetId: target.id,
        });
      },
      true
    ); // キャプチャフェーズで最初に捕捉

    // メニュー外クリックで閉じる（カードとボタンは除外）
    // バブリングフェーズで処理（カードのキャプチャより後）
    document.addEventListener(
      "click",
      (e) => {
        const target = e.target as HTMLElement;

        // カードまたはその子要素をクリックした場合は閉じない
        const clickedCard = target.closest(".navi-card__menu_item");
        const clickedButton = button.contains(target);
        const clickedMenu = target.closest(".navi-card__menu");
        const clickedLink = target.closest(".navi-card__menu_link");

        console.log("Document click:", {
          isOpen,
          clickedCard: !!clickedCard,
          clickedButton,
          clickedMenu: !!clickedMenu,
          clickedLink: !!clickedLink,
          targetClass: target.className,
        });

        // カード、リンク、ボタン、メニューをクリックした場合は閉じない
        if (isOpen && !clickedCard && !clickedButton && !clickedMenu && !clickedLink) {
          console.log("Closing menu (clicked outside)");
          button.click();
        }
      },
      false
    ); // バブリングフェーズで処理
  }

  // 初期化
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initNaviCard);
  } else {
    initNaviCard();
  }
</script>


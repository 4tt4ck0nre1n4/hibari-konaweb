    backdrop-filter: blur(10px);
    position: absolute;
    top: 88px;
    left: 136px;
    z-index: 10000;
    pointer-events: auto;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: naviCardButtonAnimation 6s ease-in-out infinite;
  }


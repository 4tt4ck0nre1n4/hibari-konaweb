    height: 150px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #ffffff 0%, #f3f4f6 100%);
    border-radius: 1rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    border: 4px solid rgba(147, 51, 234, 0.2);
    position: absolute;
    top: 0;
    left: 0;
    transform: translateY(0) translateX(0) rotateZ(0deg) scale(0.8);
    opacity: 0;
    pointer-events: none;
    transition:
      transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1),
      opacity 0.5s ease,
      box-shadow 0.3s ease;
  }


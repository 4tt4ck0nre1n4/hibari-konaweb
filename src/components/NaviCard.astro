---
interface MenuItem {
  href: string;
  ariaLabel: string;
  ariaTitle: string;
  menuItem: string;
}

const menuItems: MenuItem[] = [
  { href: "/", ariaLabel: "ホーム", ariaTitle: "ホーム", menuItem: "Home" },
  { href: "/about", ariaLabel: "アバウト", ariaTitle: "アバウト", menuItem: "About" },
  { href: "/works", ariaLabel: "ワークス", ariaTitle: "ワークス", menuItem: "Works" },
  { href: "/blog", ariaLabel: "ブログ", ariaTitle: "ブログ", menuItem: "Blog" },
  { href: "/contact", ariaLabel: "お問い合わせ", ariaTitle: "お問い合わせ", menuItem: "Contact" },
];
---

<div class="navi-card__wrapper">
  <button
    class="navi-card__button"
    type="button"
    aria-label="メニューを開く"
    aria-expanded="false"
    aria-controls="navi-card"
  >
    <span class="navi-card__button_text">Navigation Menu</span>
  </button>
  <ul id="navi-card" class="navi-card__menu" aria-hidden="true">
    {
      menuItems.map((item, index) => (
        <li class="navi-card__menu_item" data-index={index}>
          <a class="navi-card__menu_link" href={item.href} aria-label={item.ariaLabel} title={item.ariaTitle}>
            <span class="navi-card__menu_text">{item.menuItem}</span>
          </a>
        </li>
      ))
    }
  </ul>
</div>

<script>
  interface CardPosition {
    x: number;
    y: number;
    rotation: number;
  }

  function initNaviCard() {
    const button = document.querySelector(".navi-card__button") as HTMLButtonElement;
    const menu = document.querySelector(".navi-card__menu") as HTMLUListElement;
    const menuItems = document.querySelectorAll(".navi-card__menu_item") as NodeListOf<HTMLLIElement>;
    const glitchContainer = document.querySelector(".glitch-container") as HTMLElement;
    const glitchElement = document.querySelector(".glitch") as HTMLElement;

    if (!button || !menu || !menuItems.length || !glitchContainer) return;

    let isOpen = false;

    /**
     * 2つの矩形が重なっているかチェック
     */
    function isOverlapping(
      x1: number,
      y1: number,
      w1: number,
      h1: number,
      x2: number,
      y2: number,
      w2: number,
      h2: number,
      margin: number = 20
    ): boolean {
      return !(x1 + w1 + margin < x2 || x2 + w2 + margin < x1 || y1 + h1 + margin < y2 || y2 + h2 + margin < y1);
    }

    /**
     * ランダムな位置を生成（重複チェック付き）
     */
    function generateRandomPositions(): CardPosition[] {
      const containerRect = glitchContainer.getBoundingClientRect();
      const isMobile = window.innerWidth <= 768;

      // カードのサイズ
      const cardWidth = isMobile ? 120 : 120;
      const cardHeight = isMobile ? 160 : 160;

      // パディング（コンテナの端からの余白）
      const padding = 20;

      // 除外領域の設定（中央のGlitch画像）
      let excludeZones: Array<{ x: number; y: number; width: number; height: number }> = [];

      if (!isMobile && glitchElement) {
        const glitchRect = glitchElement.getBoundingClientRect();
        excludeZones.push({
          x: glitchRect.left - containerRect.left,
          y: glitchRect.top - containerRect.top,
          width: glitchRect.width,
          height: glitchRect.height,
        });
      }

      const positions: CardPosition[] = [];
      const maxAttempts = 100; // 無限ループ防止

      for (let i = 0; i < menuItems.length; i++) {
        let validPosition = false;
        let attempts = 0;
        let position: CardPosition = { x: 0, y: 0, rotation: 0 };

        while (!validPosition && attempts < maxAttempts) {
          // ランダムな位置を生成
          const x = padding + Math.random() * (containerRect.width - cardWidth - padding * 2);
          const y = padding + Math.random() * (containerRect.height - cardHeight - padding * 2);
          const rotation = Math.random() * 30 - 15; // -15度 ~ +15度

          position = { x, y, rotation };

          // 除外領域との重複チェック
          let overlapsExcludeZone = false;
          for (const zone of excludeZones) {
            if (isOverlapping(x, y, cardWidth, cardHeight, zone.x, zone.y, zone.width, zone.height, 40)) {
              overlapsExcludeZone = true;
              break;
            }
          }

          if (overlapsExcludeZone) {
            attempts++;
            continue;
          }

          // 既存のカードとの重複チェック
          let overlapsCard = false;
          for (const existingPos of positions) {
            if (isOverlapping(x, y, cardWidth, cardHeight, existingPos.x, existingPos.y, cardWidth, cardHeight)) {
              overlapsCard = true;
              break;
            }
          }

          if (!overlapsCard) {
            validPosition = true;
          }

          attempts++;
        }

        // 最大試行回数に達した場合は、重複を許容して配置
        positions.push(position);
      }

      return positions;
    }

    button.addEventListener("click", () => {
      isOpen = !isOpen;

      // ARIA属性の更新
      button.setAttribute("aria-expanded", String(isOpen));
      button.setAttribute("aria-label", isOpen ? "メニューを閉じる" : "メニューを開く");
      menu.setAttribute("aria-hidden", String(!isOpen));

      // クラスの切り替え
      button.classList.toggle("is-open", isOpen);
      menu.classList.toggle("is-open", isOpen);

      // 各アイテムのアニメーション
      if (isOpen) {
        const positions = generateRandomPositions();
        menuItems.forEach((item, index) => {
          const pos = positions[index];
          if (pos) {
            item.classList.add("is-open");
            item.style.transitionDelay = `${index * 0.08}s`;
            item.style.transform = `translate(${pos.x}px, ${pos.y}px) rotate(${pos.rotation}deg) scale(1)`;
          }
        });
      } else {
        menuItems.forEach((item, index) => {
          item.classList.remove("is-open");
          item.style.transitionDelay = `${(menuItems.length - index - 1) * 0.08}s`;
          item.style.transform = "translateY(0) translateX(0) rotateZ(0deg) scale(0.8)";
        });
      }
    });

    // メニュー外クリックで閉じる
    document.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      if (isOpen && !button.contains(target) && !menu.contains(target)) {
        button.click();
      }
    });

    // リサイズ時に開いている場合は再配置
    let resizeTimeout: number;
    window.addEventListener("resize", () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = window.setTimeout(() => {
        if (isOpen) {
          const positions = generateRandomPositions();
          menuItems.forEach((item, index) => {
            const pos = positions[index];
            if (pos) {
              item.style.transition = "none";
              item.style.transform = `translate(${pos.x}px, ${pos.y}px) rotate(${pos.rotation}deg) scale(1)`;
              // アニメーションを再度有効化
              setTimeout(() => {
                item.style.transition = "";
              }, 50);
            }
          });
        }
      }, 200);
    });
  }

  // 初期化
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initNaviCard);
  } else {
    initNaviCard();
  }
</script>


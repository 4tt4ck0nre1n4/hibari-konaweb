{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": false,
    "types": [
      "astro/client"
    ],
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.astro",
    "src/**/*.mdx",
    ".astro/**/*.ts",
    "src/types/styles.d.ts",
    "src/env.d.ts",
    "@types",
    "src/scripts/generateRevisionEntry.mjs",
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "build",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}

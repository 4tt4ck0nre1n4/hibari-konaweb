---
import { Icon } from "astro-icon/components";

interface SafeIconProps {
  name?: string;
  width?: number;
  height?: number;
  class?: string;
  ariaHidden?: boolean;
}

const { name, width = 24, height = 24, class: className, ariaHidden = true } = Astro.props as SafeIconProps;

const isValidIcon = typeof name === "string" && name !== "" && name.trim().length > 0;
---

{
  isValidIcon ? (
    <Icon name={name} width={width} height={height} class={className} aria-hidden={ariaHidden} role="presentation" />
  ) : null
}
